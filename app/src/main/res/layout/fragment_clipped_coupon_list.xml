<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tv_coupon_total_clip"
            android:text="@string/coupon_total"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/clipped_coupon_recycler_view"
            android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clipped_coupon_recycler_view"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_total_clip"
            app:layout_constraintStart_toStartOf="parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>